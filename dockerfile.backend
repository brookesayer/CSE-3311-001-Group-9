# dockerfile.backend
FROM python:3.11-slim
WORKDIR /app
COPY requirement.txt .
RUN pip install --no-cache-dir -r requirement.txt
COPY . .
EXPOSE 5000
# Dev server (what you have): 
# CMD ["flask", "run", "--host=0.0.0.0"]
# Production-ish:
CMD ["gunicorn", "-w", "2", "-b", "0.0.0.0:5000", "app:app"]
